<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".hypotenuse">

    <EditText
        android:id="@+id/editText_opposite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Please enter your opposite (m)"
        android:inputType="number|numberSigned|numberDecimal" />

    <EditText
        android:id="@+id/editText_adjacent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Please enter your adjacent (m)"
        android:inputType="number|numberSigned|numberDecimal" />

    <TextView
        android:id="@+id/textView_answerID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textSize="20sp" />

    <Button
        android:id="@+id/CalculateID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="calculateHyp"
        android:text="calculate" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="match_parent"
        android:layout_height="276dp"
        app:srcCompat="@drawable/hypotenuse" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Work out the hypotenuse of a right angled triangle."
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />
</LinearLayout>